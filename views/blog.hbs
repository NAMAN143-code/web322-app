{{#each data.posts}}
<div class="row">
    
    <section class="main col-md-9">
   {{#if data.post}}
        <article>
            <h2>{{title}}</h2>
            <img src={{featureImage}} alt="feature Image" style="width:100%" />
            <br /><br />
         {{body}}
            <br /><br />
            <strong>Category: </strong> {{category}}<br />
            <strong>Last Updated: </strong> {{postDate}}

        </article>
    {{#else}}
    <div class="col-md-12 text-center">
 <h2>{{data.message}}</h2>
 <p>Please try another Post / Category</p>
</div>
{{/if}}
    </section>
   
    <aside class="col-md-3">
        <br /><br />
        <h4>Posts</h4>

        <ul class="list-group">
            <a href="/blog/id?category={{../viewingCategory}}" class="list-group-item">Post 1</a>
            <a href="#" class="list-group-item">Post 2</a>
            <a href="#" class="list-group-item">etc...</a>
        </ul>

        <h4>Categories</h4>

        <ul class="list-group">
           <a href="#" class="list-group-item">Category 1</a>
            <a href="#" class="list-group-item">Category 2</a>
            <a href="#" class="list-group-item">etc...</a>
        </ul>
    </aside>
   
</div>
 {{/each}}