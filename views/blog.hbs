 
<div class="row">  
    
    <section class="main col-md-9">
        {{#if data.post}} 
        <article>
            <h2>{{data.posts.title}}</h2>
            <img src={{data.posts.featureImage}} alt="feature Image" style="width:100%" />
            <br /><br />
            {{#safeHTML}}
            {{data.posts.body}}
            {{/safeHTML}}
            <br /><br />
            <strong>Category: </strong> {{data.posts.category}}<br />
            <strong>Last Updated: </strong> {{data.posts.postDate}}

        </article>
        {{else}}
        <div class="col-md-12 text-center">
            <h2>{{data.message}}</h2>
             <p>Please try another Post / Category</p>
        </div>
        {{/if}}
    </section>

    <aside class="col-md-3">
        <br /><br />
    {{#if data.posts}}
        <h4>Posts</h4>
        <ul class="list-group">
     {{#each data.posts}}<a href="/blog/{{id}}?category={{../viewingCategory}}" class="list-group-item">{{title}}</a> {{/each}}
        </ul>
    {{/if}}

        <h4>Categories</h4>
        <ul class="list-group">
      {{#each data.categories}}<a href="/blog?category={{category}}" class="list-group-item">{{category}}</a> {{/each}}

        </ul>

    </aside>   
</div>

